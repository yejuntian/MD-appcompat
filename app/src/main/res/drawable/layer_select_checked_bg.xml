<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--被选中时是8dp的底部边线-->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#f00" />
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape>
                    <solid android:color="#fff" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>