<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--底层使用蓝色填充色-->
            <solid android:color="#02a0ef"></solid>
        </shape>
    </item>

    <!--上层颜色盖住底层颜色，(left,right,top,bottom上层距离底层的间距相当于margin属性)-->
    <item
        android:bottom="10dp"
        android:top="10dp">
        <shape>
            <solid android:color="#fff"></solid>
        </shape>
    </item>

</layer-list>